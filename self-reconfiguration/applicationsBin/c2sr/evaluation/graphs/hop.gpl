set terminal pdf enhanced mono font ",16"

set termoption enhanced

set key inside top left vertical Right title "Goal shape"

set xlabel "Configuration size (2D Catom)"
set ylabel "Information traveled hops"

set key title "Goal shape"

set xtics 3000
set mxtics 3
set ytics 1
#set format x "%.1tx10^{%.0T}"
#set xtics add ("0" 0)

set grid xtics ytics
set output "hop.pdf"

f(x) = a
fit f(x) '../results/global-summary.out' using 1:10 via a
ti = sprintf("y = %.2f", a)

set label ti at 4000,2.75

plot [0:][0:9]'../results/car/summary.out' using 1:10:9:11 with yerrorbars title "car" pt 1 lt 1,\
     '../results/flag/summary.out' using 1:10:9:11 with yerrorbars title "flag" pt 2 lt 2,\
'../results/magnet/summary.out' using 1:10:9:11 with yerrorbars title "magnet" pt 3 lt 3,\
'../results/pyramid/summary.out' using 1:10:9:11 with yerrorbars title "pyramid" pt 4 lt 4,\
f(x) title "" with lines

